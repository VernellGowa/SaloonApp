<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.saloon.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.saloon.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_registerLocationFragment"
            app:destination="@id/registerLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerLocationFragment"
        android:name="com.example.saloon.RegisterLocationFragment"
        android:label="RegisterLocationFragment" >
        <argument
            android:name="accountItem"
            app:argType="com.example.saloon.AccountItem" />
    </fragment>
</navigation>