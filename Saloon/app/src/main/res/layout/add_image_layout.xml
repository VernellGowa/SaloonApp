<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">
    <TextView
        android:id="@+id/add"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="@string/add_image_"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:textSize="30sp"
        app:drawableStartCompat="@drawable/ic_baseline_add_circle_24"
        app:drawableTint="@color/teal_200" />
    <TextView
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_image"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:textSize="30sp"
        app:drawableStartCompat="@drawable/ic_baseline_cancel_24"
        app:drawableTint="@color/red" />
</LinearLayout>